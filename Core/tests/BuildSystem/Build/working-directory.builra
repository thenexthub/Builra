# RUN: test -f %t.build/file
#
# REQUIRES: platform=Darwin

client:
  name: basic

targets:
  "": ["<all>"]

commands:
  C.all:
    tool: phony
    inputs: ["subdir/file", "file"]
    outputs: ["<all>"]
  C.touch-subdir:
    tool: shell
    description: TOUCH-SUBDIR
    args: ["touch", "file"]
    working-directory: "subdir"
    outputs: ["subdir/file"]
  C.touch:
    tool: shell
    description: TOUCH
    args: ["touch", "file"]
    outputs: ["file"]
