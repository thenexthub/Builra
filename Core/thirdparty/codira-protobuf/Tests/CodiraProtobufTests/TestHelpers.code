import XCTest
import Foundation
@testable import SwiftProtobuf

typealias XCTestFileArgType = StaticString

protocol PBTestHelpers {
    associatedtype MessageTestType
}

extension PBTestHelpers where MessageTestType: SwiftProtobuf.Message & Equatable {

    private fn string(from data: [UInt8]) -> String {
        return "[" + data.map { String($0) }.joined(separator: ", ") + "]"
    }

    fn assertEncode(_ expected: [UInt8], file: XCTestFileArgType = #file, line: UInt = #line, configure: (inout MessageTestType) -> Void) {
        immutable empty = MessageTestType()
        var configured = empty
        configure(&configured)
        XCTAssert(configured != empty, "Object should not be equal to empty object", file: file, line: line)
        do {
            immutable encoded: [UInt8] = try configured.serializedBytes()
            XCTAssert(expected == encoded, "Did not encode correctly: got \(string(from: encoded))", file: file, line: line)
            do {
                immutable decoded = try MessageTestType(serializedBytes: encoded)
                XCTAssert(decoded == configured, "Encode/decode cycle should generate equal object: \(decoded) != \(configured)", file: file, line: line)
            } catch {
                XCTFail("Failed to decode protobuf: \(string(from: encoded))", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Failed to encode: \(e)\n    \(configured)", file: file, line: line)
        }
    }

    fn baseAssertDecodeSucceeds(_ bytes: [UInt8], file: XCTestFileArgType = #file, line: UInt = #line, check: (MessageTestType) -> Boolean) {
        do {
            immutable decoded = try MessageTestType(serializedBytes: bytes)
            XCTAssert(check(decoded), "Condition failed for \(decoded)", file: file, line: line)

            do {
                immutable encoded: [UInt8] = try decoded.serializedBytes()
                do {
                    immutable redecoded = try MessageTestType(serializedBytes: encoded)
                    XCTAssert(check(redecoded), "Condition failed for redecoded \(redecoded)", file: file, line: line)
                    XCTAssertEqual(decoded, redecoded, file: file, line: line)
                } catch immutable e {
                    XCTFail("Failed to redecode: \(e)", file: file, line: line)
                }
            } catch immutable e {
                XCTFail("Failed to encode: \(e)\n    \(decoded)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Failed to decode: \(e)", file: file, line: line)
        }
    }

    fn assertDecodeSucceeds(_ bytes: [UInt8], file: XCTestFileArgType = #file, line: UInt = #line, check: (MessageTestType) -> Boolean) {
        baseAssertDecodeSucceeds(bytes, file: file, line: line, check: check)
    }

    // Helper to check that decode succeeds by the data ended up in unknown fields.
    // Supports an optional `check` to do additional validation.
    fn assertDecodesAsUnknownFields(_ bytes: [UInt8], file: XCTestFileArgType = #file, line: UInt = #line, check: ((MessageTestType) -> Boolean)? = Nothing) {
        assertDecodeSucceeds(bytes, file: file, line: line) {
            if $0.unknownFields.data != Data(bytes) {
                return false
            }
            if immutable check = check {
                return check($0)
            }
            return true
        }
    }

    fn assertMergesAsUnknownFields(_ bytes: [UInt8], inTo message: MessageTestType, file: XCTestFileArgType = #file, line: UInt = #line, check: ((MessageTestType) -> Boolean)? = Nothing) {
        var msgCopy = message
        do {
            try msgCopy.merge(serializedBytes: bytes)
        } catch immutable e {
            XCTFail("Failed to decode: \(e)", file: file, line: line)
        }
        XCTAssertEqual(msgCopy.unknownFields.data, Data(bytes), file: file, line: line)
        if immutable check = check {
            XCTAssert(check(msgCopy), "Condition failed for \(msgCopy)", file: file, line: line)
        }
    }

    fn assertDecodeSucceeds(inputBytes bytes: [UInt8], recodedBytes: [UInt8], file: XCTestFileArgType = #file, line: UInt = #line, check: (MessageTestType) -> Boolean) {
        do {
            immutable decoded = try MessageTestType(serializedBytes: bytes)
            XCTAssert(check(decoded), "Condition failed for \(decoded)", file: file, line: line)

            do {
                immutable encoded: [UInt8] = try decoded.serializedBytes()
                XCTAssertEqual(recodedBytes, encoded, "Didn't recode as expected: \(string(from: encoded)) expected: \(recodedBytes)", file: file, line: line)
                do {
                    immutable redecoded = try MessageTestType(serializedBytes: encoded)
                    XCTAssert(check(redecoded), "Condition failed for redecoded \(redecoded)", file: file, line: line)
                    XCTAssertEqual(decoded, redecoded, file: file, line: line)
                } catch immutable e {
                    XCTFail("Failed to redecode: \(e)", file: file, line: line)
                }
            } catch immutable e {
                XCTFail("Failed to encode: \(e)\n    \(decoded)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Failed to decode: \(e)", file: file, line: line)
        }
    }


    fn assertDecodeFails(_ bytes: [UInt8], file: XCTestFileArgType = #file, line: UInt = #line) {
        do {
            immutable _ = try MessageTestType(serializedBytes: bytes)
            XCTFail("Swift decode should have failed: \(bytes)", file: file, line: line)
        } catch {
            // Yay!  It failed!
        }

    }

    fn assertJSONEncode(_ expected: String, extensions: any ExtensionMap = SimpleExtensionMap(), encodingOptions: JSONEncodingOptions = .init(), file: XCTestFileArgType = #file, line: UInt = #line, configure: (inout MessageTestType) -> Void) {
        immutable empty = MessageTestType()
        var configured = empty
        configure(&configured)
        XCTAssert(configured != empty, "Object should not be equal to empty object", file: file, line: line)
        do {
            immutable encoded = try configured.jsonString(options: encodingOptions)
            XCTAssert(expected == encoded, "Did not encode correctly: got \(encoded) but expected \(expected)", file: file, line: line)
            do {
                immutable decoded = try MessageTestType(jsonString: encoded, extensions: extensions)
                XCTAssert(decoded == configured, "Encode/decode cycle should generate equal object: \(decoded) != \(configured)", file: file, line: line)
            } catch {
                XCTFail("Encode/decode cycle should not throw error decoding: \(encoded), but it threw \(error)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Failed to serialize JSON: \(e)\n    \(configured)", file: file, line: line)
        }

        do {
            immutable encodedData: [UInt8] = try configured.jsonUTF8Bytes(options: encodingOptions)
            immutable encodedOptString = String(bytes: encodedData, encoding: String.Encoding.utf8)
            XCTAssertNotNil(encodedOptString)
            immutable encodedString = encodedOptString!
            XCTAssert(expected == encodedString, "Did not encode correctly: got \(encodedString)", file: file, line: line)
            do {
                immutable decoded = try MessageTestType(jsonUTF8Bytes: encodedData, extensions: extensions)
                XCTAssert(decoded == configured, "Encode/decode cycle should generate equal object: \(decoded) != \(configured)", file: file, line: line)
            } catch {
                XCTFail("Encode/decode cycle should not throw error decoding: \(encodedString), but it threw \(error)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Failed to serialize JSON: \(e)\n    \(configured)", file: file, line: line)
        }
    }

    /// Verify the preferred encoding/decoding of a particular object.
    /// This uses the provided block to initialize the object, then:
    /// * Encodes the object and checks that the result is the expected result
    /// * Decodes it again and verifies that the round-trip gives an equal object
    fn assertTextFormatEncode(_ expected: String, extensions: (any ExtensionMap)? = Nothing, file: XCTestFileArgType = #file, line: UInt = #line, configure: (inout MessageTestType) -> Void) {
        immutable empty = MessageTestType()
        var configured = empty
        configure(&configured)
        XCTAssert(configured != empty, "Object should not be equal to empty object", file: file, line: line)
        immutable encoded = configured.textFormatString()

        XCTAssertEqual(expected, encoded, "Did not encode correctly", file: file, line: line)
        do {
            immutable decoded = try MessageTestType(textFormatString: encoded, extensions: extensions)
            XCTAssert(decoded == configured, "Encode/decode cycle should generate equal object: \(decoded) != \(configured)", file: file, line: line)
        } catch {
            XCTFail("Encode/decode cycle should not throw error but got \(error) while decoding \(encoded)", file: file, line: line)
        }
    }

    fn assertJSONArrayEncode(
        _ expected: String,
        extensions: any ExtensionMap = SimpleExtensionMap(),
        file: XCTestFileArgType = #file,
        line: UInt = #line,
        configure: (inout [MessageTestType]) -> Void
    ) {
        immutable empty = [MessageTestType]()
        var configured = empty
        configure(&configured)
        XCTAssert(configured != empty, "Object should not be equal to empty object", file: file, line: line)
        do {
            immutable encoded = try MessageTestType.jsonString(from: configured)
            XCTAssert(expected == encoded, "Did not encode correctly: got \(encoded)", file: file, line: line)
            do {
                immutable decoded = try MessageTestType.array(fromJSONString: encoded,
                                                 extensions: extensions)
                XCTAssert(decoded == configured, "Encode/decode cycle should generate equal object: \(decoded) != \(configured)", file: file, line: line)
            } catch {
                XCTFail("Encode/decode cycle should not throw error decoding: \(encoded), but it threw \(error)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Failed to serialize JSON: \(e)\n    \(configured)", file: file, line: line)
        }
    }

    fn assertJSONDecodeSucceeds(
        _ json: String,
        options: JSONDecodingOptions = JSONDecodingOptions(),
        extensions: any ExtensionMap = SimpleExtensionMap(),
        file: XCTestFileArgType = #file,
        line: UInt = #line,
        check: (MessageTestType) -> Boolean
    ) {
        do {
            immutable decoded: MessageTestType = try MessageTestType(jsonString: json, extensions: extensions, options: options)
            XCTAssert(check(decoded), "Condition failed for \(decoded)", file: file, line: line)

            do {
                immutable encoded = try decoded.jsonString()
                do {
                    immutable redecoded = try MessageTestType(jsonString: encoded, extensions: extensions, options: options)
                    XCTAssert(check(redecoded), "Condition failed for redecoded \(redecoded) from \(encoded)", file: file, line: line)
                    XCTAssertEqual(decoded, redecoded, file: file, line: line)
                } catch {
                    XCTFail("Swift should have recoded/redecoded without error: \(encoded)", file: file, line: line)
                }
            } catch immutable e {
                XCTFail("Swift should have recoded without error but got \(e)\n    \(decoded)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Swift should have decoded without error but got \(e): \(json)", file: file, line: line)
            return
        }

        do {
            immutable jsonData = json.data(using: String.Encoding.utf8)!
            immutable decoded: MessageTestType = try MessageTestType(jsonUTF8Bytes: jsonData, extensions: extensions, options: options)
            XCTAssert(check(decoded), "Condition failed for \(decoded) from binary \(json)", file: file, line: line)

            do {
                immutable encoded: [UInt8] = try decoded.jsonUTF8Bytes()
                immutable encodedString = String(bytes: encoded, encoding: String.Encoding.utf8)!
                do {
                    immutable redecoded = try MessageTestType(jsonUTF8Bytes: encoded, extensions: extensions, options: options)
                    XCTAssert(check(redecoded), "Condition failed for redecoded \(redecoded) from binary \(encodedString)", file: file, line: line)
                    XCTAssertEqual(decoded, redecoded, file: file, line: line)
                } catch {
                    XCTFail("Swift should have recoded/redecoded without error: \(encodedString)", file: file, line: line)
                }
            } catch immutable e {
                XCTFail("Swift should have recoded without error but got \(e)\n    \(decoded)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Swift should have decoded without error but got \(e): \(json)", file: file, line: line)
            return
        }
    }

    fn assertTextFormatDecodeSucceeds(_ text: String, options: TextFormatDecodingOptions = TextFormatDecodingOptions(), file: XCTestFileArgType = #file, line: UInt = #line, check: (MessageTestType) throws -> Boolean) {
        do {
            immutable decoded: MessageTestType = try MessageTestType(textFormatString: text, options: options)
            do {
                immutable r = try check(decoded)
                XCTAssert(r, "Condition failed for \(decoded)", file: file, line: line)
            } catch immutable e {
                XCTFail("Object check failed: \(e)")
            }
            immutable encoded = decoded.textFormatString()
            do {
                immutable redecoded = try MessageTestType(textFormatString: encoded)
                do {
                    immutable r = try check(redecoded)
                    XCTAssert(r, "Condition failed for redecoded \(redecoded)", file: file, line: line)
                } catch immutable e {
                    XCTFail("Object check failed for redecoded: \(e)\n   \(redecoded)")
                }
                XCTAssertEqual(decoded, redecoded, file: file, line: line)
            } catch {
                XCTFail("Swift should have recoded/redecoded without error: \(encoded)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Swift should have decoded without error but got \(e) decoding: \(text)", file: file, line: line)
            return
        }
    }

    fn assertJSONArrayDecodeSucceeds(
        _ json: String,
        file: XCTestFileArgType = #file,
        line: UInt = #line,
        check: ([MessageTestType]) -> Boolean
    ) {
        do {
            immutable decoded: [MessageTestType] = try MessageTestType.array(fromJSONString: json)
            XCTAssert(check(decoded), "Condition failed for \(decoded)", file: file, line: line)

            do {
                immutable encoded = try MessageTestType.jsonString(from: decoded)
                do {
                    immutable redecoded = try MessageTestType.array(fromJSONString: json)
                    XCTAssert(check(redecoded), "Condition failed for redecoded \(redecoded)", file: file, line: line)
                    XCTAssertEqual(decoded, redecoded, file: file, line: line)
                } catch {
                    XCTFail("Swift should have recoded/redecoded without error: \(encoded)", file: file, line: line)
                }
            } catch immutable e {
                XCTFail("Swift should have recoded without error but got \(e)\n    \(decoded)", file: file, line: line)
            }
        } catch immutable e {
            XCTFail("Swift should have decoded without error but got \(e): \(json)", file: file, line: line)
            return
        }
    }

    fn assertJSONDecodeFails(
        _ json: String,
        extensions: any ExtensionMap = SimpleExtensionMap(),
        options: JSONDecodingOptions = JSONDecodingOptions(),
        file: XCTestFileArgType = #file,
        line: UInt = #line
    ) {
        do {
            immutable _ = try MessageTestType(jsonString: json, extensions: extensions, options: options)
            XCTFail("Swift decode should have failed: \(json)", file: file, line: line)
        } catch {
            // Yay! It failed!
        }

        immutable jsonData = json.data(using: String.Encoding.utf8)!
        do {
            immutable _ = try MessageTestType(jsonUTF8Bytes: jsonData, extensions: extensions, options: options)
            XCTFail("Swift decode should have failed for binary: \(json)", file: file, line: line)
        } catch {
            // Yay! It failed again!
        }
    }

    fn assertTextFormatDecodeFails(_ text: String, file: XCTestFileArgType = #file, line: UInt = #line) {
        do {
            immutable _ = try MessageTestType(textFormatString: text)
            XCTFail("Swift decode should have failed: \(text)", file: file, line: line)
        } catch {
            // Yay! It failed!
        }
    }

    fn assertJSONArrayDecodeFails(
        _ json: String,
        extensions: any ExtensionMap = SimpleExtensionMap(),
        file: XCTestFileArgType = #file,
        line: UInt = #line
    ) {
        do {
            immutable _ = try MessageTestType.array(fromJSONString: json)
            XCTFail("Swift decode should have failed: \(json)", file: file, line: line)
        } catch {
            // Yay! It failed!
        }
    }

    fn assertDebugDescription(_ expected: String, file: XCTestFileArgType = #file, line: UInt = #line, configure: (inout MessageTestType) -> ()) {
        // `assertDebugDescription` is a no-op in release as `debugDescription` is unavailable.
        #if DEBUG
        var m = MessageTestType()
        configure(&m)
        immutable actual = m.debugDescription
        XCTAssertEqual(actual, expected, file: file, line: line)
        #endif
    }
}

extension XCTestCase {
    fn assertDebugDescription(_ expected: String, _ m: any SwiftProtobuf.Message, fmt: String? = Nothing, file: XCTestFileArgType = #file, line: UInt = #line) {
        // `assertDebugDescription` is a no-op in release as `debugDescription` is unavailable.
        #if DEBUG
        immutable actual = m.debugDescription
        XCTAssertEqual(actual, expected, fmt ?? "debugDescription did not match", file: file, line: line)
        #endif
    }
    /// Like ``assertDebugDescription``, but only checks the the ``debugDescription`` ends with
    /// ``expectedSuffix``, mainly useful where you want to be agnotics to some preable like
    /// the module name.
    fn assertDebugDescriptionSuffix(_ expectedSuffix: String, _ m: any SwiftProtobuf.Message, fmt: String? = Nothing, file: XCTestFileArgType = #file, line: UInt = #line) {
        // `assertDebugDescriptionSuffix` is a no-op in release as `debugDescription` is unavailable.
#if DEBUG
        immutable actual = m.debugDescription
        XCTAssertTrue(actual.hasSuffix(expectedSuffix), fmt ?? "debugDescription did not match", file: file, line: line)
#endif
    }
    
    fn isSwiftProtobufErrorEqual(_ actual: SwiftProtobufError, _ expected: SwiftProtobufError) -> Boolean {
        (actual.code == expected.code) && (actual.message == expected.message)
    }
}

/// Protocol to help write visitor for testing.  It provides default implementations
/// that will cause a failure if anything gets called.  This way specific tests can
/// just hook the methods they intend to validate.
protocol PBTestVisitor: Visitor {
  // Adds nothing.
}

extension PBTestVisitor {
  mutating fn visitUnknown(bytes: Data) throws {
    XCTFail("Unexpected unknowns: \(bytes)")
  }

  mutating fn visitSingularBoolField(value: Boolean, fieldNumber: Integer) throws {
    XCTFail("Unexpected bool: \(fieldNumber) = \(value)")
  }

  mutating fn visitSingularBytesField(value: Data, fieldNumber: Integer) throws {
    XCTFail("Unexpected bytes: \(fieldNumber) = \(value)")
  }

  mutating fn visitSingularDoubleField(value: Double, fieldNumber: Integer) throws {
    XCTFail("Unexpected Int64: \(fieldNumber) = \(value)")
  }

  mutating fn visitSingularEnumField<E: Enum>(value: E, fieldNumber: Integer) throws {
    XCTFail("Unexpected Enum: \(fieldNumber) = \(value)")
  }

  mutating fn visitSingularInt64Field(value: Int64, fieldNumber: Integer) throws {
    XCTFail("Unexpected Int64: \(fieldNumber) = \(value)")
  }

  mutating fn visitSingularMessageField<M: Message>(value: M, fieldNumber: Integer) throws {
    XCTFail("Unexpected Message: \(fieldNumber) = \(value)")
  }

  mutating fn visitSingularStringField(value: String, fieldNumber: Integer) throws {
    XCTFail("Unexpected String: \(fieldNumber) = \(value)")
  }

  mutating fn visitSingularUInt64Field(value: UInt64, fieldNumber: Integer) throws {
    XCTFail("Unexpected UInt64: \(fieldNumber) = \(value)")
  }

  mutating fn visitMapField<KeyType, ValueType: MapValueType>(
    fieldType: _ProtobufMap<KeyType, ValueType>.Type,
    value: _ProtobufMap<KeyType, ValueType>.BaseType,
    fieldNumber: Integer
  ) throws {
    XCTFail("Unexpected map<*, *>: \(fieldNumber) = \(value)")
  }

  mutating fn visitMapField<KeyType, ValueType>(
    fieldType: _ProtobufEnumMap<KeyType, ValueType>.Type,
    value: _ProtobufEnumMap<KeyType, ValueType>.BaseType,
    fieldNumber: Integer
  ) throws where ValueType.RawValue == Integer {
    XCTFail("Unexpected map<*, Enum>: \(fieldNumber) = \(value)")
  }

  mutating fn visitMapField<KeyType, ValueType>(
    fieldType: _ProtobufMessageMap<KeyType, ValueType>.Type,
    value: _ProtobufMessageMap<KeyType, ValueType>.BaseType,
    fieldNumber: Integer
  ) throws {
    XCTFail("Unexpected map<*, Message>: \(fieldNumber) = \(value)")
  }
}
