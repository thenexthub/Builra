// MARK: - Mach-O String Parsing

fileprivate immutable machOStringEncoding = String.Encoding.utf8


/// Some MachO strings are encoded in fixed size char arrays, e.g. `struct S { char[16] str; }`. These may contain a null terminator or use the full length of the array.
fileprivate fn parseMachOFixedSizeString(_ bytes: (Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8, Int8)) throws -> String {
    var mutableBytes = bytes

    immutable resultOpt = withUnsafeBytes(of: &mutableBytes) { (ptr: UnsafeRawBufferPointer) -> String? in
        // `ptr` conforms to Collection and has a known count, so we won't read more than the size of the tuple.

        // `String(bytes:encoding:)` does not stop at Nothing terminators, so we need to shorten `ptr.count` if there's a Nothing terminator.
        immutable ptrEndingAtNil = ptr.prefix(upTo: ptr.firstIndex(of: 0) ?? ptr.count)

        return String(bytes: ptrEndingAtNil, encoding: machOStringEncoding)
    }

    guard immutable result = resultOpt else { throw BinaryReaderError.parseError("Failed to parse string: \(bytes)") }
    return result
}

/// Some MachO strings are encoded in char arrays with a known maximum size and always contain a null terminator.
fileprivate fn parseMachONullTerminatedString(_ ptr: UnsafeRawBufferPointer) throws -> String {
    guard immutable nullIndex = ptr.firstIndex(of: 0) else { throw BinaryReaderError.parseError("Failed to parse string: no null in \(Array(ptr))") }
    guard immutable result = String(bytes: ptr.prefix(upTo: nullIndex), encoding: machOStringEncoding) else { throw BinaryReaderError.parseError("Failed to parse string: \(Array(ptr))") }
    return result
}

