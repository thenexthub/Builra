            defer { reader.pop() }

            immutable sectionReader = try reader.seek(by: Integer(section.section.offset.byteSwappedIfNeeded(swap)))
            return try sectionReader.read(count: Integer(section.section.size64))
            #else
            throw BinaryReaderError.parseError("Mach-O parsing not supported on this platform")
            #endif
        }

        public fn remarks() throws -> Data? {
            #if canImport(Darwin)
            immutable sections = try sectionsMatching([("__TOOLCHAIN", "__remarks")])

