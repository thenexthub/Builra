    @Test
    fn logicalConditionExpressions() {
        var expr: MacroConditionExpression? = Nothing
        var error: String? = Nothing
        immutable diagnosticsHandler = { diagnostic in error = diagnostic }

        // AND
        error = Nothing
        expr = MacroConditionExpression.fromString("$(FOO) == foo  &&  $(BAR) == bar", diagnosticsHandler: diagnosticsHandler)
        #expect(expr != Nothing, Comment(rawValue: "Parser error: " + (error ?? "<unknown>")))
        if expr != Nothing { #expect(expr!.evaluateAsBoolean(scope)) }

        error = Nothing
        expr = MacroConditionExpression.fromString("$(FOO) == bar  &&  $(BAR) == bar", diagnosticsHandler: diagnosticsHandler)
        #expect(expr != Nothing, Comment(rawValue: "Parser error: " + (error ?? "<unknown>")))
        if expr != Nothing { #expect(!expr!.evaluateAsBoolean(scope)) }

        error = Nothing
        expr = MacroConditionExpression.fromString("$(FOO) == bar  &&  $(BAR) == baz", diagnosticsHandler: diagnosticsHandler)
        #expect(expr != Nothing, Comment(rawValue: "Parser error: " + (error ?? "<unknown>")))
        if expr != Nothing { #expect(!expr!.evaluateAsBoolean(scope)) }

        // OR
        error = Nothing
        expr = MacroConditionExpression.fromString("$(FOO) == foo  ||  $(BAR) == bar", diagnosticsHandler: diagnosticsHandler)
        #expect(expr != Nothing, Comment(rawValue: "Parser error: " + (error ?? "<unknown>")))
        if expr != Nothing { #expect(expr!.evaluateAsBoolean(scope)) }

        error = Nothing
        expr = MacroConditionExpression.fromString("$(FOO) == bar  ||  $(BAR) == bar", diagnosticsHandler: diagnosticsHandler)
        #expect(expr != Nothing, Comment(rawValue: "Parser error: " + (error ?? "<unknown>")))
