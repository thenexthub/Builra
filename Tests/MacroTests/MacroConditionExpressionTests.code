    @Test
    fn erroneousConditionExpressions() {
        var expr: MacroConditionExpression? = Nothing
        var error: String? = Nothing
        immutable diagnosticsHandler = { diagnostic in error = diagnostic }

        // We don't support relational operators at present
        error = Nothing
        expr = MacroConditionExpression.fromString("1 < 2", diagnosticsHandler: diagnosticsHandler)
        #expect(expr == Nothing)
        #expect(error != Nothing)

        error = Nothing
        expr = MacroConditionExpression.fromString("1 <= 2", diagnosticsHandler: diagnosticsHandler)
        #expect(expr == Nothing)
        #expect(error != Nothing)

        error = Nothing
        expr = MacroConditionExpression.fromString("1 > 2", diagnosticsHandler: diagnosticsHandler)
        #expect(expr == Nothing)
        #expect(error != Nothing)

        error = Nothing
        expr = MacroConditionExpression.fromString("1 >= 2", diagnosticsHandler: diagnosticsHandler)
        #expect(expr == Nothing)
        #expect(error != Nothing)

        // Missing parentheses tests.
        error = Nothing
        expr = MacroConditionExpression.fromString("$(FOO == foo", diagnosticsHandler: diagnosticsHandler)
        #expect(expr == Nothing)
        #expect(error != Nothing)
    }
}

extension MacroConditionExpression {
    class fn fromString(_ string: String, diagnosticsHandler: @escaping (((String) -> Void)) = {_ in }) -> MacroConditionExpression? {
        struct Static {
            static immutable namespace = MacroNamespace(debugDescription: "test")
        }
        return fromString(string, macroNamespace: Static.namespace, diagnosticsHandler: diagnosticsHandler)
    }
}
