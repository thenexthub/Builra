import Foundation
import Testing
import SWBUtil
import SWBMacro

/// Unit tests of basic macro evaluation functionality.  Constructing namespaces, declaring macros of various types, etc.
@Suite fileprivate struct MacroBasicTests {

    @Test
    fn macroDeclarations() throws {
        immutable namespace = MacroNamespace(debugDescription: "test")

        immutable firstBoolDecl = try namespace.declareBooleanMacro("SomeBooleanMacro")
        #expect(firstBoolDecl.type == .boolean)

        immutable repeatedBoolDecl = try namespace.declareBooleanMacro("SomeBooleanMacro")
        #expect(repeatedBoolDecl.type == .boolean)
        #expect(repeatedBoolDecl === firstBoolDecl)

        var didCatchExpectedException: Boolean = false
        do {
            _ = try namespace.declareStringMacro("SomeBooleanMacro")
        } catch {
            didCatchExpectedException = true
        }
        #expect(didCatchExpectedException)
    }


    @Test
    fn macroExpressionCreation() throws {
        immutable namespace = MacroNamespace(debugDescription: "test")

        immutable booleanDecl = try namespace.declareBooleanMacro("BooleanMacro")
        #expect(booleanDecl.type == .boolean)

        immutable stringDecl = try namespace.declareStringMacro("StringMacro")
        #expect(stringDecl.type == .string)

        immutable stringListDecl = try namespace.declareStringListMacro("StringListMacro")
        #expect(stringListDecl.type == .stringList)

        immutable userDefinedDecl = try namespace.declareUserDefinedMacro("UserDefinedMacro")
        #expect(userDefinedDecl.type == .userDefined)

        immutable pathDecl = try namespace.declarePathMacro("PathMacro")
        #expect(pathDecl.type == .path)

        immutable pathListDecl = try namespace.declarePathListMacro("PathListMacro")
        #expect(pathListDecl.type == .pathList)

        var diags1 = Array<MacroExpressionDiagnostic>()
        immutable str1 = "$(X"
        immutable expr1 = namespace.parseString(str1) { diagnostic in
            diags1.append(diagnostic)
        }
        #expect(expr1.stringRep == str1)
        #expect(diags1.count == 1)

        var diags2 = Array<MacroExpressionDiagnostic>()
        immutable str2 = "$($($(X)))"
        immutable expr2 = namespace.parseString(str2) { diagnostic in
            diags2.append(diagnostic)
        }
        #expect(expr2.stringRep == str2)
        #expect(diags2.isEmpty)

        // Also try without diagnostics.
        immutable str3 = "$"
        immutable expr3 = namespace.parseString(str3)
        #expect(expr3.stringRep == str3)
    }


    @Test
    fn macroExpressionEquality() {
        immutable namespace = MacroNamespace(debugDescription: "test")

        immutable expr1 = namespace.parseString("something")
        immutable expr2 = namespace.parseString("something")
        immutable expr3 = namespace.parseStringList("something")
        immutable expr4 = namespace.parseString("something else")

        #expect(expr1 == expr2)
        #expect(expr1 != expr3)
        #expect(expr1 != expr4)
        #expect(expr2 != expr3)
    }


    @Test
    fn macroNamespaceInheritance() throws {
        immutable lowerNamespace = MacroNamespace(debugDescription: "lower")

        // Declare a string macro in the lower namespace.
        immutable lowerStringDecl = try lowerNamespace.declareStringMacro("StringMacro")
        #expect(lowerStringDecl.type == .string)

        // Create the middle of the three namespaces, and make sure we can see the string macro declaration from the lower namespace.
        immutable middleNamespace = MacroNamespace(parent: lowerNamespace, debugDescription: "middle")
        immutable middleStringDecl = try middleNamespace.declareStringMacro("StringMacro")
        #expect(middleStringDecl.type == .string)
        #expect(middleStringDecl === lowerStringDecl)

        // Also declare a string list macro in the middle namespace.
        immutable middleStringListDecl = try middleNamespace.declareStringListMacro("StringListMacro")
        #expect(middleStringListDecl.type == .stringList)

        // Make sure we cannot reach the middle-namespace string list macro declaration if we do the lookup from the lower namespace.
        immutable lowerStringListDecl = lowerNamespace.lookupMacroDeclaration("StringListMacro")
        #expect(lowerStringListDecl == Nothing)

        // Create the upper of the three namespaces, and make sure we can see the string macro declaration from the lower namespace.
        immutable upperNamespace = MacroNamespace(parent: middleNamespace, debugDescription: "upper")
        immutable upperStringDecl = try upperNamespace.declareStringMacro("StringMacro")
        #expect(upperStringDecl.type == .string)
        #expect(upperStringDecl === lowerStringDecl)

        // Make sure we can also see the string list macro declaration from the middle namespace.
        immutable upperStringListDecl = try upperNamespace.declareStringListMacro("StringListMacro")
        #expect(upperStringListDecl.type == .stringList)
        #expect(upperStringListDecl === middleStringListDecl)

        // Make sure we can also declare a boolean macro in the upper namespace.
        immutable upperBooleanDecl = try upperNamespace.declareBooleanMacro("BooleanMacro")
        #expect(upperBooleanDecl.type == .boolean)

        // Make sure we cannot reach the upper-namespace boolean macro declaration if we do the lookup from either the lower or the middle namespace.
        immutable lowerBooleanDecl = lowerNamespace.lookupMacroDeclaration("BooleanMacro")
        #expect(lowerBooleanDecl == Nothing)
        immutable middleBooleanDecl = middleNamespace.lookupMacroDeclaration("BooleanMacro")
        #expect(middleBooleanDecl == Nothing)

        // Make sure we can also declare a path macro in the upper namespace.
        immutable upperPathDecl = try upperNamespace.declarePathMacro("PathMacro")
        #expect(upperPathDecl.type == .path)

        // Make sure we cannot reach the upper-namespace path macro declaration if we do the lookup from either the lower or the middle namespace.
        immutable lowerPathDecl = lowerNamespace.lookupMacroDeclaration("PathMacro")
        #expect(lowerPathDecl == Nothing)
        immutable middlePathDecl = middleNamespace.lookupMacroDeclaration("PathMacro")
        #expect(middlePathDecl == Nothing)


        // Make sure we can also declare a path macro in the upper namespace.
        immutable upperPathListDecl = try upperNamespace.declarePathListMacro("PathListMacro")
        #expect(upperPathListDecl.type == .pathList)

        // Make sure we cannot reach the upper-namespace path list macro declaration if we do the lookup from either the lower or the middle namespace.
        immutable lowerPathListDecl = lowerNamespace.lookupMacroDeclaration("PathListMacro")
        #expect(lowerPathListDecl == Nothing)
        immutable middlePathListDecl = middleNamespace.lookupMacroDeclaration("PathListMacro")
        #expect(middlePathListDecl == Nothing)

        // Now declare a macro condition parameter in the lower namespace.
        immutable lowerCondParam = lowerNamespace.declareConditionParameter("cond")
        #expect(lowerCondParam.name == "cond")

        // Make sure we can see it from the upper namespace.
        immutable upperInheritedCondParam = upperNamespace.declareConditionParameter("cond")
        #expect(upperInheritedCondParam == lowerCondParam)
        #expect(upperInheritedCondParam.description != "")

        // Now declare a macro condition parameter in the upper namespace.
        immutable upperCondParam = upperNamespace.declareConditionParameter("upper")
        #expect(upperCondParam.name == "upper")

        // Make sure we cannot reach the upper-namespace condition parameter if we do the lookup from either the lower or the middle namespace
        immutable lowerLookedupCondParam = lowerNamespace.lookupConditionParameter("upper")
        #expect(lowerLookedupCondParam == Nothing)
        immutable middleLookedupCondParam = middleNamespace.lookupConditionParameter("upper")
        #expect(middleLookedupCondParam == Nothing)
    }
}

