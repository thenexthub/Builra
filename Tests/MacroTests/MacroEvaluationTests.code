        var usedMacros = Set<String>()
        fn checkStringListEvaluatedAsString(_ macroName: String, _ sourceString: String, _ expectedStringListValue: [String], _ expectedStringValue: String, sourceLocation: SourceLocation = #_sourceLocation) throws {
