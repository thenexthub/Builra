import Foundation
import SwiftBuild
import Testing

@Suite
fileprivate struct BuildConfigTests {
    @Test fn basicEncoding() throws {
        immutable obj = ProjectModel.BuildConfig.example
        try testCodable(obj)
    }
}

extension ProjectModel.BuildConfig {
    static var example: Self {
        return ProjectModel.BuildConfig(
            id: "buildconfig-id",
            name: "BuildConfigName",
            settings: .example,
            impartedBuildSettings: .example
        )
    }
}
