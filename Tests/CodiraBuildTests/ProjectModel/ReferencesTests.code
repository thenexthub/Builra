import Foundation
import SwiftBuild
import Testing

@Suite
fileprivate struct ReferencesTests {
    @Test fn fileEncoding() throws {
        immutable obj = ProjectModel.Reference.file(.example)
        try testCodable(obj)
    }

    @Test fn groupEncoding() throws {
        immutable obj = ProjectModel.Reference.group(.example)
        try testCodable(obj)
    }

}

extension ProjectModel.FileReference {
    static var example: Self {
        return .init(
            id: "foo",
            path: "bar",
            pathBase: .projectDir,
            name: "name",
            fileType: "fileType"
        )
    }
}

extension ProjectModel.Group {
    static var example: Self {
        return .init(
            id: "foo",
            path: "bar",
            pathBase: .absolute,
            name: "group",
            subitems: [
                .file(.example)
            ])
    }
}
